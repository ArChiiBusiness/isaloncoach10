@{
    ViewData["Title"] = "Salon Growth " + DateTime.Now.Year;
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}
@model BOL.ActualBOL;

<div class="row">
    <div class="col-12">
        <a href="~/home" class="mb-4">Dashboard</a>
        <form action="/form/submit" method="post">

            <div class="card shadow-sm p-2 mt-2">
                <div class="card-body">
                    <div class="form-row">
                        <label for="SalonName" class="col-form-label"><b>Salon Name</b></label>
                        <input type="text" name="SalonName" class="form-control">
                    </div>
                </div>
            </div>

            <div class="card shadow-sm p-2 mt-2">
                <div class="card-body">
                    <div class="form-row">
                        <label for="Email" class="col-form-label"><b>Email</b></label>
                        <input type="email" name="Email" class="form-control">
                    </div>
                </div>
            </div>

            <div class="card shadow-sm p-2">
                <div class="card-body">
                    <div class="form-row">
                        <label for="ContactName" class="col-form-label"><b>Name</b></label>
                        <input type="text" name="ContactName" class="form-control">
                    </div>
                </div>
            </div>

            <div class="card shadow-sm p-2 mt-2">
                <div class="card-body">
                    <div class="form-row">
                        <label for="Year" class="col-form-label"><b>Year</b></label>
                        <input type="number" name="Year" class="form-control">
                    </div>
                </div>
            </div>

            <div class="card shadow-sm p-2 mt-2">
                <div class="card-body">
                    <div class="form-group">
                        <label for="Month" class="col-form-label"><b>Month</b></label>
                        <select name="Month" class="form-select">
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm p-2 mt-2">
                <div class="card-body">
                    <div class="form-row">
                        <label for="TotalTakings" class="col-form-label"><b>Total Monthly Takings</b></label>
                        <input type="number" name="TotalTakings" class="form-control">
                    </div>
                </div>
            </div>

            <div class="card shadow-sm p-2 mt-2">
                <div class="card-body">
                    <div class="form-row">
                        <label for="RetailMonth" class="col-form-label"><b>Retail For The Month $</b></label>
                        <input type="number" name="RetailMonth" class="form-control">
                    </div>
                </div>
            </div>

            <div class="card shadow-sm p-2 mt-2">
                <div class="card-body">
                    <div class="form-row">
                        <label for="WageBillMonth" class="col-form-label"><b>Wage Bill For The Month $</b></label>
                        <input type="number" name="WageBillMonth" class="form-control">
                    </div>
                </div>
            </div>

            <div class="card shadow-sm p-2 mt-2">
                <div class="card-body">
                    <div class="form-row">
                        <label for="ClientVisits" class="col-form-label"><b>Number of client visits In A Month</b></label>
                        <input type="number" name="ClientVisitsMonth" class="form-control">
                    </div>
                </div>
            </div>

            <div class="card shadow-sm p-2 mt-2">
                <div class="card-body">
                    <div class="form-row">
                        <label for="RebooksMonth" class="col-form-label"><b>Rebooks this Month, %</b></label>
                        <input type="number" name="RebooksMonth" class="form-control">
                    </div>
                </div>
            </div>

            <div class="card shadow-sm p-2 mt-2">
                <div class="card-body">
                    <div class="form-row">
                        <label for="ClientVisitsLastYear" class="col-form-label"><b>Total client visits (12 months) From Todays Date</b></label>
                        <input type="number" name="ClientVisitsLastYear" class="form-control">
                    </div>
                </div>
            </div>

            <div class="card shadow-sm p-2 mt-2">
                <div class="card-body">
                    <div class="form-row">
                        <label for="IndividualClientVisitsLastYear" class="col-form-label"><b>Total individual clients (12 months) From Todays Date</b></label>
                        <input type="number" name="IndividualClientVisitsLastYear" class="form-control">
                    </div>
                </div>
            </div>

            <div class="card shadow-sm p-2 mt-2">
                <div class="card-body">
                    <div class="form-row">
                        <label for="NewClientsMonth" class="col-form-label"><b>Number New clients this month</b></label>
                        <input type="number" name="NewClientsMonth" class="form-control">
                    </div>
                </div>
            </div>

            <div class="card shadow-sm p-2 mt-2">
                <div class="card-body">
                    <div class="form-row">
                        <label for="TotalClientsInDatabase" class="col-form-label"><b>Total Clients In Database</b></label>
                        <input type="number" name="TotalClientsInDatabase" class="form-control">
                    </div>
                </div>
            </div>

            <div class="card shadow-sm p-2 mt-2 mb-2">
                <div class="card-body">
                    <div>
                        <button type="submit" class="btn btn-primary mt-3 w-100">Submit</button>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
