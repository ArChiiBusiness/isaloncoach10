@{
    ViewData["Title"] = "Submit Form";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}
@model BOL.FormDataBOL;

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body shadow-sm p-3">
                <a href="~/home" class="mb-4">Dashboard</a>
                <form action="/form/submit" method="post">
                    <div class="form-row">
                        <label for="Name" class="col-form-label">Name</label>
                        <input type="text" name="Name" class="form-control">
                    </div>
                    <div class="form-row">
                        <label for="SalonName" class="col-form-label">Salon Name</label>
                        <input type="text" name="SalonName" class="form-control">
                    </div>
                    <div class="form-row">
                        <label for="Email" class="col-form-label">Email</label>
                        <input type="email" name="SalonName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="Month" class="col-form-label">Month</label>
                        <select name="Month" class="form-select">
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </div>
                    <div class="form-row">
                        <label for="TotalMonthlyTakings" class="col-form-label">Total Monthly Takings</label>
                        <input type="number" name="TotalMonthlyTakings" class="form-control">
                    </div>
                    <div class="form-row">
                        <label for="RetailMonthUSD" class="col-form-label">Retail Month, $</label>
                        <input type="number" name="RetailMonthUSD" class="form-control">
                    </div>
                    <div class="form-row">
                        <label for="WageBillMonthUSD" class="col-form-label">Wage Bill Month, $</label>
                        <input type="number" name="WageBillMonthUSD" class="form-control">
                    </div>
                    <div class="form-row">
                        <label for="ClientVisitsMonth" class="col-form-label">Client Visits per Month</label>
                        <input type="number" name="ClientVisitsMonth" class="form-control">
                    </div>
                    <div class="form-row">
                        <label for="TargetMonthUSD" class="col-form-label">Target per Month, $</label>
                        <input type="number" name="TargetMonthUSD" class="form-control">
                    </div>
                    <div class="form-row">
                        <label for="TargetClientsMonth" class="col-form-label">Target Clients per Month</label>
                        <input type="number" name="TargetClientsMonth" class="form-control">
                    </div>
                    <div class="form-row">
                        <label for="RebooksMonth" class="col-form-label">Rebooks this Month, %</label>
                        <input type="number" name="RebooksMonth" class="form-control">
                    </div>
                    <div class="form-row">
                        <label for="TotalClientVisitsYear" class="col-form-label">Total client visits (12 months) From Todays Date</label>
                        <input type="number" name="TotalClientVisitsYear" class="form-control">
                    </div>
                    <div class="form-row">
                        <label for="TotalIndividualClientVisitsYear" class="col-form-label">Total individual clients (12 months) From Todays Date</label>
                        <input type="number" name="TotalIndividualClientVisitsYear" class="form-control">
                    </div>
                    <div class="form-row">
                        <label for="NewClientsMonth" class="col-form-label">Number New clients this month</label>
                        <input type="number" name="NewClientsMonth" class="form-control">
                    </div>
                    <div class="form-row">
                        <label for="PastYearTotalTakings" class="col-form-label">Past Year Total Takings (Last 12 months)</label>
                        <input type="number" name="PastYearTotalTakings" class="form-control">
                    </div>
                    <div class="form-row">
                        <label for="TotalClientsInDatabase" class="col-form-label">Total Clients In Database</label>
                        <input type="number" name="TotalClientsInDatabase" class="form-control">
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary mt-3 w-100">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
